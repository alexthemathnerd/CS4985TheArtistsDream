<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<fx:root alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.HBox">
   <children>
      <Button onAction="#handleNavDropdown" mnemonicParsing="false" text="NAV" />
      <Region HBox.hgrow="ALWAYS" />
      <TextField fx:id="searchTextField"/>
      <Button onAction="#handleFilter" mnemonicParsing="false" text="FILTER" />
      <Button onAction="#handleSearch" mnemonicParsing="false" text="SEARCH" />
      <Region HBox.hgrow="ALWAYS" />
      <Button onAction="#handleLogout" mnemonicParsing="false" text="LOGOUT" />
      <Button onAction="#handleMessages" mnemonicParsing="false" text="MESSAGES" />
      <Button onAction="#handleViewProfile" mnemonicParsing="false" text="PROFILE" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</fx:root>
