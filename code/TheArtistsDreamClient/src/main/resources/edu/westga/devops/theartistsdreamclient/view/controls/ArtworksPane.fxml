<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
         style="-fx-background-color: #1e1e24;" stylesheets="@artworks-pane-design.css"
         type="javafx.scene.control.ScrollPane" xmlns="http://javafx.com/javafx/16">
    <content>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" style="-fx-background-color: #1e1e24;">
            <children>
                <TilePane fx:id="artworksTilePane" alignment="TOP_CENTER" hgap="20.0" maxWidth="-Infinity" prefRows="10"
                          tileAlignment="TOP_LEFT" vgap="20.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TilePane>
                <Button fx:id="viewMoreButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleViewMore" prefWidth="200.0" text="VIEW MORE" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </content>
    <stylesheets>
        <URL value="@../core-design.css"/>
        <URL value="@artworks-pane-design.css"/>
    </stylesheets>
</fx:root>